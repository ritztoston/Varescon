<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/editPassword"
            android:hint="Old Password"
            android:inputType="textPassword"
            android:text=""
            android:textColor="@color/bgcolor"
            android:textColorHint="@color/bgcolor"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:met_singleLineEllipsis="true"
            app:met_baseColor="@color/bgcolor"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/bgcolor"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/newEditPassword"
            android:hint="New Password (Minimum  of 6 characters)"
            android:inputType="textPassword"
            android:text=""
            android:textColor="@color/bgcolor"
            android:textColorHint="@color/bgcolor"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:met_singleLineEllipsis="true"
            app:met_baseColor="@color/bgcolor"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/bgcolor"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/reEditPassword"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:text=""
            android:textColor="@color/bgcolor"
            android:textColorHint="@color/bgcolor"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:met_singleLineEllipsis="true"
            app:met_baseColor="@color/bgcolor"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/bgcolor"/>

    </LinearLayout>

</android.support.v7.widget.CardView>