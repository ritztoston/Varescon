<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.parse.starter.varescon.History.HistoryRecycler.HistorySinglePage"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/headerDetails"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="TRIP DETAILS"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@color/bgcolor"/>
        <LinearLayout
            android:layout_below="@+id/headerDetails"
            android:layout_above="@+id/centerInParent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <fragment
                android:id="@+id/mapTripDetails"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/esPayHolder"
                android:layout_above="@+id/buttonsHolder"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/centerInParent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"></RelativeLayout>
        <RelativeLayout
            android:layout_below="@+id/centerInParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="Trip Information"
                            android:textColor="@color/red"
                            android:textSize="20sp"
                            android:textStyle="bold"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="From:"
                            android:textColor="@color/bgcolor"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/fromTd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:gravity="right"
                            android:text="Taloto District Tagbilaran City"
                            android:textColor="@color/bgcolor"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginRight="15dp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="To:"
                            android:textColor="@color/bgcolor"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/toTd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:gravity="right"
                            android:text="San Miguel Manga District Tagbilaran City"
                            android:textColor="@color/bgcolor"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="Distance:"
                            android:textColor="@color/bgcolor"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/distanceTd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:gravity="right"
                            android:text="text"
                            android:textColor="@color/bgcolor"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginRight="15dp"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="Duration:"
                            android:textColor="@color/bgcolor"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/durationTd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:gravity="right"
                            android:text="San Miguel Manga District Tagbilaran City"
                            android:textColor="@color/bgcolor"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginRight="15dp"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="Amount Paid:"
                            android:textColor="@color/bgcolor"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/paymentTd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:gravity="right"
                            android:text="San Miguel Manga District Tagbilaran City"
                            android:textColor="@color/bgcolor"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginRight="15dp"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:text="Mode of Payment:"
                            android:textColor="@color/bgcolor"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/mopTd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:gravity="right"
                            android:text="San Miguel Manga District Tagbilaran City"
                            android:textColor="@color/bgcolor"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:layout_marginRight="15dp"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profilePicS"
                            android:layout_alignParentLeft="true"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="30dp"
                            android:src="@drawable/profile_pic"
                            app:civ_border_width="5dp"
                            app:civ_border_color="@color/red"
                            android:layout_marginTop="20dp"/>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:id="@+id/relativeLayout">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:gravity="right"
                                    android:text="Driver's Information"
                                    android:textColor="@color/red"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:layout_marginRight="15dp"
                                    android:id="@+id/textView3" />
                                <TextView
                                    android:id="@+id/driverName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:gravity="right"
                                    android:text="Driver Name:"
                                    android:textColor="@color/bgcolor"
                                    android:textSize="13sp"
                                    android:textStyle="bold"
                                    android:layout_marginRight="15dp"
                                    android:layout_marginTop="25dp"/>

                            </RelativeLayout>

                    </RelativeLayout>
                </LinearLayout>

            </ScrollView>

        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>
